<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<ScrollPane xmlns:fx="http://javafx.com/fxml" fx:id="container" disable="true" xmlns="http://javafx.com/javafx"
            fx:controller="de.dargmuesli.spotitag.ui.controller.DashboardController">
    <VBox>
        <MenuBar>
            <Menu mnemonicParsing="false" text="File">
                <MenuItem mnemonicParsing="false" onAction="#onClickSettings" text="Settings"/>
                <MenuItem mnemonicParsing="false" onAction="#onClickClearCache" text="Clear caches"/>
            </Menu>
        </MenuBar>
        <VBox alignment="CENTER" spacing="10.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <VBox>
                <Label text="Source directory"/>
                <HBox alignment="CENTER" spacing="10.0">
                    <Button mnemonicParsing="false" onAction="#chooseDirectory">
                        <graphic>
                            <FontIcon iconLiteral="fas-folder-open"/>
                        </graphic>
                    </Button>
                    <TextField fx:id="directoryTextField" onKeyTyped="#onDirectoryInput" HBox.hgrow="ALWAYS"/>
                </HBox>
            </VBox>
            <CheckBox fx:id="isSubdirectoryIncludedCheckBox" mnemonicParsing="false"
                      onAction="#onSubdirectoryInclusionToggle" text="%isSubdirectoryIncluded"/>

            <Label/>
            <Button onAction="#onScan" text="Scan"/>
            <GridPane hgap="10.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="369.0" minWidth="10.0" prefWidth="339.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="199.0" minWidth="10.0" prefWidth="71.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <opaqueInsets>
                    <Insets/>
                </opaqueInsets>
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
                <Label text="%filesFound"/>
                <Label layoutX="10.0" layoutY="6.0" text="%filesWithSpotifyId" GridPane.rowIndex="1"/>
                <Label layoutX="10.0" layoutY="6.0" text="%filesWithSpotitagVersion" GridPane.rowIndex="2"/>
                <Label fx:id="filesFoundLabel" text="-" GridPane.columnIndex="1"/>
                <Label fx:id="filesFoundWithSpotifyIdLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label layoutX="10.0" layoutY="26.0" text="%filesWithSpotitagVersionNewest" GridPane.rowIndex="3"/>
                <Label fx:id="filesFoundWithSpotitagVersionLabel" layoutX="225.0" layoutY="26.0" text="-"
                       GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Label fx:id="filesFoundWithSpotitagVersionNewestLabel" layoutX="225.0" layoutY="46.0" text="-"
                       GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            </GridPane>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                <ImageView fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true"/>
                <ImageView fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true"/>
            </HBox>
        </VBox>
        <ProgressBar fx:id="progressBar" maxWidth="1.7976931348623157E308" progress="0.0"/>
    </VBox>
</ScrollPane>
