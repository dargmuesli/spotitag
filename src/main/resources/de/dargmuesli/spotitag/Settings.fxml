<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" minWidth="500.0"
            xmlns="http://javafx.com/javafx"
            fx:controller="de.dargmuesli.spotitag.ui.controller.SettingsController">
    <opaqueInsets>
        <Insets/>
    </opaqueInsets>
    <VBox AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
          AnchorPane.topAnchor="10.0">
        <opaqueInsets>
            <Insets/>
        </opaqueInsets>
        <Label styleClass="h1" text="Settings"/>
        <VBox layoutX="10.0" layoutY="32.0">
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <padding>
                <Insets bottom="10.0" left="10.0" top="10.0"/>
            </padding>
            <Label styleClass="h2" text="Spotify">
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
            </Label>
            <GridPane hgap="10.0" vgap="5.0">
                <columnConstraints>
                    <ColumnConstraints/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                </rowConstraints>
                <opaqueInsets>
                    <Insets/>
                </opaqueInsets>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
                <Label styleClass="bold" text="Client ID" GridPane.columnIndex="0"
                       GridPane.rowIndex="0"/>
                <TextField fx:id="spotifyClientIdTextField" prefHeight="25.0" GridPane.columnIndex="1"
                           GridPane.rowIndex="0" HBox.hgrow="ALWAYS"/>
                <Label styleClass="bold" text="Client Secret" GridPane.columnIndex="0"
                       GridPane.rowIndex="1"/>
                <TextField fx:id="spotifyClientSecretTextField" prefHeight="25.0"
                           GridPane.columnIndex="1" GridPane.rowIndex="1" HBox.hgrow="ALWAYS"/>
                <Label styleClass="bold" text="Redirect URI" GridPane.columnIndex="0"
                       GridPane.rowIndex="2"/>
                <TextField fx:id="spotifyRedirectUriTextField" prefHeight="25.0"
                           GridPane.columnIndex="1" GridPane.rowIndex="2" HBox.hgrow="ALWAYS"/>
                <Button fx:id="btnOpenAuthorization" disable="true" mnemonicParsing="false"
                        onAction="#openAuthorization" text="Open Authorization" GridPane.columnIndex="1"
                        GridPane.halignment="CENTER" GridPane.rowIndex="3"/>
            </GridPane>
        </VBox>
    </VBox>
</AnchorPane>
